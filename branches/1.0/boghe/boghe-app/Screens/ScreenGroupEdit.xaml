    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:BogheControls;assembly=BogheControls"
    Height="300" Width="300">
    <Grid>
        <Label Background="SkyBlue" FontSize="16" FontWeight="Bold" Height="33" Name="labelTitle" VerticalAlignment="Top">Create Group</Label>
        <Label Height="28" HorizontalAlignment="Left" Margin="3,38,0,0" Name="labelDisplayName" VerticalAlignment="Top" Width="93">DisplayName*:</Label>
        <TextBox Height="23" Margin="101,41,10,0" Name="textBoxDisplayName" VerticalAlignment="Top" />
        <Button Background="Transparent" Height="23" Margin="0,0,88,9" Name="buttonSave" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="buttonSave_Click" BorderBrush="SkyBlue">Save</Button>
        <Button Background="Transparent" Height="23" Margin="0,0,5,9" Name="buttonCancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="buttonCancel_Click" BorderBrush="SkyBlue">Cancel</Button>
    </Grid>
