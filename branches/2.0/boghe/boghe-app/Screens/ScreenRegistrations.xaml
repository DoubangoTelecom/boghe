<ctrl:BaseScreen x:Class="BogheApp.Screens.ScreenRegistrations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ctrl="clr-namespace:BogheControls;assembly=BogheControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:items="clr-namespace:BogheApp.Items"
    Height="407" Width="300">
    <Grid>
        <ListBox Name="listBox" Margin="0,29,0,0" HorizontalContentAlignment="Stretch" BorderBrush="SkyBlue">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <items:ItemRegistration Value="{Binding Path=.}" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</ctrl:BaseScreen>
